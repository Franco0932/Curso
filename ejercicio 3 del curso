#include <stdio.h>
int main ()

{

	int a, x, y, op;
	
	printf ("\t\tSeleccione una opcion:  \n 1)Suma \n 2) Resta \n 3) Multiplicacion \n 4) Divicion \n");
	scanf ("%d",&a);




	if ( a==1 )
	{
		printf("Ingresa el primer valor: ");
		scanf ("%d", &x);

		printf("Ingresa el segundo valor: ");
		scanf ("%d", &y);

		op=x+y;

			printf ("El resultado es:  %d\n", op );

	}
	else
	{
		
		if (a==2)
		{
			printf("Ingresa el primer valor: ");
			scanf ("%d", &x);

			printf("Ingresa el segundo valor: ");
			scanf ("%d", &y);
	
			op=x-y;

				printf ("El resultado es:  %d\n", op);
		}
		else 

			if (a==3)
			{

			printf("Ingresa el primer valor: ");
			scanf ("%d", &x);
  
			printf("Ingresa el segundo valor: ");
			scanf ("%d", &y);
	
			op=x*y;

				printf ("El resultado es:  %d\n", op);
			}

			else
			{
				if (a==4)
				{

			printf("Ingresa el numerador: ");
			scanf ("%d", &x);

			printf("Ingresa el denominador: ");
			scanf ("%d", &y);
	
			op=x/y;
			
			    if(y==0){
			    	printf("La operacion no es valida\n");
			    }
			    else{
				printf ("El resultado es:  %d\n", op);
				}
	        }
    }
}

	return 0;
}
